@model FakeBank.Domain.Entities.Accounts.Account

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>Account</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.AccountNumber)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.AccountNumber)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.AccountName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.AccountName)
        </dd>
        <dd>
            @Html.DisplayFor(model => model.GetBalance())
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Deposit" asp-route-id="@Model.Id">Deposit</a>
    <a asp-action="Withdraw" asp-route-id="@Model.Id">Withdraw</a>
    <a asp-action="Transfer" asp-route-id="@Model.Id">Transfer</a>
    <a asp-action="Transaction" asp-route-id="@Model.Id">Transaction</a>
</div>
